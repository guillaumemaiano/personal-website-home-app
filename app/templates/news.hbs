<div class="news-container">
    {{#each model as |news|}}
    <article>
        <h3>{{news.title}}</h3>
        <div class="row">
        <em><span class="col-lg-06 col-md-6 col-sm-6 col-xs-12">{{news.abstract}}</span></em>
        
            <span class='published-date col-lg-4 col-md-4 col-sm-4 col-sm-offset-2'>{{t 'published-on'}} {{moment-format news.date 'LLL'}}</span>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-6 col-sm-6 col-xs-12 col-sm-offset-1">
            {{news.content}}
            {{outlet}}
            </div>
            {{#if news.image}}
            <div class="col-lg-2 col-md-2 col-sm-2  hidden-xs hidden-sm {{unless news.image "hidden"}}">
                <!-- I'd like to inject an alt="{{t 'context_pic'}} {{news.abstract}}" -->
                {{light-box href=news.image data-lightbox="cat-1" data-title=news.abstract}}
            </div>
            {{/if}}
        </div>
    </article>
    {{/each}}
</div>
